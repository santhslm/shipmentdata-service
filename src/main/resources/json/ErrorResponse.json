{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {},
  "id": "http://example.com/example.json",
  "properties": {
    "errorMessage": {
      "properties": {
        "errors": {
          "id": "/properties/errors",
          "items": {
            "id": "/properties/errors/items",
            "properties": {
              "code": {
                "required":true,
                "id": "/properties/errors/items/properties/code",
                "maxLength": 50,
                "minLength": 1,
                "type": "string",
                "example": "CONTRACT_VALIDATION_ERROR"
 },
              "message": {
                "required":true,
                "id": "/properties/errors/items/properties/message",
                "maxLength": 500,
                "minLength": 1,
                "type": "string",
                "example": "Field Name - Mandatory Field is missing in the request"
 }
            },
            "type": "object"
 },
          "type": "array"
 }
      },
      "type": "object",
      "description": "Error message"
 }
  },
  "type": "object"
}